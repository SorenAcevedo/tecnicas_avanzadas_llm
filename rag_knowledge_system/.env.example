# =============================================================================
# RAG KNOWLEDGE SYSTEM - CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Streamlit Configuration
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/rag_knowledge_db
REDIS_URL=redis://localhost:6379/0

# LLM Providers
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3
OLLAMA_TEMPERATURE=0.7

# Vector Database Configuration
# ChromaDB
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
CHROMA_COLLECTION_NAME=knowledge_base

# Pinecone
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=rag-knowledge-index

# Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_CLASS_NAME=Document

# Embeddings Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
BATCH_SIZE=32

# Chunking Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
CHUNKING_STRATEGY=recursive_character

# Scraping Configuration
SCRAPY_SETTINGS_MODULE=config.scrapy.settings
SCRAPY_USER_AGENT=RAG-Knowledge-Bot 1.0
SCRAPY_DELAY=1
SCRAPY_CONCURRENT_REQUESTS=8
SCRAPY_AUTOTHROTTLE_ENABLED=true

# Proxy Configuration (Optional)
USE_PROXIES=false
PROXY_LIST_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# Monitoring & Logging
SENTRY_DSN=
PROMETHEUS_PORT=9090
ENABLE_TRACING=true

# Security
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# File Storage
DATA_DIRECTORY=./data
RAW_DATA_DIR=./data/raw
PROCESSED_DATA_DIR=./data/processed
EMBEDDINGS_DATA_DIR=./data/embeddings
LOGS_DIR=./logs

# Model Storage
MODELS_DIR=./data/models
CACHE_DIR=./data/cache

# Testing Configuration
TEST_DATABASE_URL=sqlite:///./test.db
TEST_CHROMA_PERSIST_DIRECTORY=./tests/data/chroma_test